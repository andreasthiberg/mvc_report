{# templates/user/user-create.html.twig #}
{% extends 'baseProject.html.twig' %}

{% block title %}Användare{% endblock %}
{% block content %}
    <div class="user-content">
    <a href="{{ path("texas-home") }}">&#x3c;- Tillbaka</a>
    <h2>Skapa användare</h2>
    <form method="post">
        <label for="akronym">Akronym:</label><br>
        <input required type="text" id="akronym" name="akronym"><br>
        <label for="password">Lösenord:</label><br>
        <input required type="password" id="password" name="password"><br><br>
        <label for="name">Namn:</label><br>
        <input required type="text" id="name" name="name"><br>
        <label for="email">Email:</label><br>
        <input required type="text" id="email" name="email"><br>
        <label for="picture">Länk till profilbild:</label><br>
        <input required type="text" id="picture" name="picture"><br><br>
        <input type="radio" id="user" name="type" value="user" checked="checked">
        <label for="user">Vanlig användare</label><br>
        <input type="radio" id="admin" name="type" value="admin">
        <label for="admin">Admin</label><br><br>
    
        <input type="submit" value="Skapa användare">
    </form>
    </div>
{% endblock %}